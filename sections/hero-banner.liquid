
<div class="hero-banner-main">
  <div class="hero-banner-child">
    <div class="hero-banner-child-content">
      {% if section.settings.subhead %}
        <p class="hero-banner-subhead h4-class">{{ section.settings.subhead }}</p>
      {% endif %}
      {% if section.settings.head %}
        <h1 class="hero-banner-head"><a style="color: inherit;" href="{{ section.settings.heading_link }}">{{ section.settings.head }}</a></h1>
      {% endif %}
      {% unless section.settings.subhead_below_main == blank %}
        <h4 class="hero-banner-below-header">{{ section.settings.subhead_below_main }}</h4>
      {% endunless %}
    </div>
    {% if section.settings.bgimg %}
      <div class="hero-banner-child-img">
        <!--<img width="100%" height="auto" src="{{ section.settings.bgimg | img_url: '' }}" alt="{{ section.settings.bgimg.alt }}">-->
        {% comment %}
        {{ section.settings.bgimg | image_url: width: 3840 | image_tag:
              sizes: "100vw",
              height: "auto",
              widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840',
              preload:true
            }}
        {% endcomment %}
      {{ section.settings.bgimg | image_url: width:3840 | image_tag: 
              sizes: "100vw",
              height: "100%",
              widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840',
              loading:"eager",
              fetchpriority:"high",
              alt:"Hero Image"
            }}

      </div>
    {% endif %}
    <div class="hero-banner-buttons">
      {% if section.settings.firstlink %}
        <a href="{{ section.settings.firstlink }}">{{ section.settings.flinktext }}</a>
      {% endif %}
      {% if section.settings.secondlink %}
        <a href="{{ section.settings.secondlink }}">{{ section.settings.slinktext }}</a>
      {% endif %}
    </div>

    {% if section.settings.littleimg %}
      
        <div class="hero-banner-child-img bottom-image" style="display:flex;justify-content:center;">
          {% comment %}
          <a href="{{ section.settings.littleimg_link }}">
            <img  width="100%" height="auto" src="{{ section.settings.littleimg | img_url: '' }}" alt="{{ section.settings.littleimg.alt }}">            
          </a>
          {% endcomment %}
      <a href="{{ section.settings.littleimg_link }}">
          {{ section.settings.littleimg | image_url: width: 800 | image_tag:
              sizes: "800",
              height: "auto",
              widths: '375, 550, 800',
              preload:true,
              alt: 'Promotional Banner'
            }}
      </a>
        </div>
      
    {% endif %}
    
    {% if section.settings.show_shipping == true and section.settings.ship_icon != blank or section.settings.ship_text  != blank %}
    <div class="shipping-text">
      <a href="{{ section.settings.ship_link }}">
        {% if section.settings.ship_icon != blank  %}
          <img src="{{ section.settings.ship_icon | img_url:"small" }}" alt="Delivery Truck Icon">
        {% endif %}
        {% if section.settings.ship_text != blank %}
          {{ section.settings.ship_text }}
        {% endif %}
      </a>
    </div>
    {% endif %}
  </div>
</div>
<style>
  .shipping-text img {
    max-width: 60px;
    margin-right: 10px;
  }
  
  .shipping-text a span b {
    color: #ffffffff;
  }
  
  .shipping-text a span {
    color: #6F6F6F;
  }
  
  .shipping-text a {
    font-family: Oswald,sans-serif!important;
    font-weight: 400 !important;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .shipping-text {
    text-align: center;
    display: inline-block;
    vertical-align: top;
    width: 100%;
    padding: 10px 15px;
  }
  
  .shipping-text a span,.shipping-text a span b {
    font-weight: 400 !important;
    font-size: 15px !important;
  }

  @media screen and (max-width: 575px) {
     .shipping-text a {
       flex-direction:column;
     }
    .shipping-text img {
      max-width: 40px;
      margin-bottom: 8px;
      margin-right: 0px;
    }
    
    .shipping-text a span, .shipping-text a span b {
      font-size: 9px !important;
      text-align: center;
    }
    
    .shipping-text {
      padding: 15px 15px;
    }
  }
</style>
