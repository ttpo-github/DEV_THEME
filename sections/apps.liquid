<div class="{% if section.settings.include_margins %}page-width{% endif %}" {% if section.settings.css_id_selector != blank %}id="{{ section.settings.css_id_selector }}"{% endif %}>
  {%- for block in section.blocks -%}
    {% render block %}
  {%- endfor -%}
</div>

{% schema %}
{
  "name": "t:sections.apps.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "include_margins",
      "default": true,
      "label": "t:sections.apps.settings.include_margins.label"
    },
    {
      "type":"text",
      "id":"css_id_selector",
      "label":"ID for CSS Selector"
    }
  ],
  "blocks": [
    {
      "type": "@app"
    }
  ],
  "presets": [
    {
      "name": "t:sections.apps.presets.name"
    }
  ]
}
{% endschema %}
