<style>
  video{
    height:100%;
  }
  
  #custom-svg-mask {
    font-size:3em;
    text-transform:uppercase;
    overflow-wrap: break-word;
    position:absolute;
    top:0;
  }

  

</style>

<div style="height:60vh; width:100%;">

    <video autoplay playsinline muted loop preload>
      <source src="{{ section.settings.video_source }}"/>
    </video>

    <svg id="custom-svg-mask" height="100%" width="100%">
      <defs>
        <mask id="mask" x="0" y="0" height="100%" width="100%">
          <rect x="0" y="0" height="100%" width="100%" />
            <text y="1em" fill="red">SO THE</text>
            <text y="2em" fill="red">DOERS</text>
            <text y="3em" fill="red">CAN DO</text>
         
        </mask>
      </defs>
            <rect x="0" y="0" height="100%" width="100%" />
    </svg>
</div>
  
{% schema %}
{
  "name": "Video Hero Section",
  "settings": [
    {
      "type": "text",
      "label": "Video Source (MP4)",
      "id": "video_source",
      "default": "#",
      "info": "Enter the video URL for the background and popup modal. Works with Shopify hosted MP4s."
    }
  ],
  "presets": [
    {
      "name": "Video Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}