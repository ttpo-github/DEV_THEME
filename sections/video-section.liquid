<style>
  video{
    height:100%;
  }
  
  #custom-svg-mask {
    font-size:3em;
    text-transform:uppercase;
    overflow-wrap: break-word;
    position:absolute;
    top:5%;
  }

  #custom-svg-mask rect{
    fill: #FFF;
    mask:url(#mask)
  }

  #custom-svg-mask text {
    font-weight:900;
  }

  .overlay-text-block {
    height:100%;
    width:100%;
    font-weight:900;
    position:absolute;
    background:#000;
    color:#fff;
    display:flex;
    justify-content:center;
    align-items:center;
    font-size:3rem;
    mix-blend-mode:multiply;
  }

</style>

<div style="height:60vh; width:100%;">

    <video autoplay playsinline muted loop preload>
      <source src="{{ section.settings.video_source }}"/>
    </video>

  <div class="text-overlay-block">
    <h1>SO THE DOERS CAN DO</h1>
  </div>

